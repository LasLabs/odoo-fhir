<openerp>
    <data>

    <!-- Address Views -->

        <record id="hc_address_view_search" model="ir.ui.view">
          <field name="name">Address Search</field>
          <field name="model">hc.address</field>
          <field name="arch" type="xml">
            <search string="Addresses">
              <field name="text"/>
              <field name="postal_code_id" string="Postal/ZIP Code"/>
              <field name="city_id" string="City/Place"/>
              <field name="district_id" string="District/County"/>
              <field name="state_id" string="State/Province"/>
              <field name="division_id"/>
              <field name="region_id"/>
              <field name="country_id"/>
              <filter name="state_id" string="California" domain="[('state_id', '=', 'base.state_us_5')]"/> 
              <group string="Group By"> 
                <filter name="group_by_state" string="State" context="{'group_by': 'state_id'}"/>
              </group> 
            </search>
          </field>
        </record>

        <record id="hc_address_view_tree" model="ir.ui.view">
          <field name="name">Address Tree</field>
          <field name="model">hc.address</field>
          <field name="arch" type="xml">
            <tree string="Addresses">
              <field name="line1" string="Street"/>
              <field name="city_id" string="City/Place"/>
              <field name="postal_code_id" string="Postal/ZIP Code"/>
              <field name="district_id" string="District/County"/>
              <field name="state_id" string="State/Province"/>
              <field name="division_id" invisible="1"/>
              <field name="region_id" invisible="1"/>
              <field name="country_id"/>
            </tree>
          </field>
        </record>

    <record id="hc_address_view_form" model="ir.ui.view">
          <field name="name">Address Form</field>
          <field name="model">hc.address</field>
          <field name="arch" type="xml">
            <form string="Address">
              <sheet>
                <div class="oe_title oe_left" colwidth="200">
                  <h1>
                    <field name="text" default_focus="1" readonly="1" placeholder="Full Address"/>
                  </h1>
                </div>
                <group>
                  <group>
                    <field name="line1"/>
                    <field name="line2"/>
                    <field name="line3"/>
                    <field name="city_id" string="City/Place"/>
                    <field name="postal_code_id" string="Postal/ZIP Code"/>
                  </group>
                  <group>
                    <field name="district_id" string="District/County"/>
                    <field name="state_id" placeholder="State/Province"/>
                    <field name="division_id"/>
                    <field name="region_id"/>
                    <field name="country_id"/>
                  </group>
                </group>
              </sheet>
            </form>
          </field>
        </record>
        
