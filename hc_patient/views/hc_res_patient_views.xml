                  action="hc_vs_animal_species_action" 
                  groups="hc_base.group_hc_base_manager" 
                  sequence="10"/>
                  
        <act_window id="hc_vs_animal_breed_action"          
                    name="HC Animal Breeds"
                    res_model="hc.vs.animal.breed"
                    view_mode="tree,form"
